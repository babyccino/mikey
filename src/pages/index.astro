---
import BaseLayout from "@/layouts/BaseLayout.astro";
import BlogEntry from "@/components/entries/BlogEntry.astro";
// import Cta from "@/components/global/Cta.astro";
import { sort } from "@/utils/posts";

import { getCollection } from "astro:content";
const allPosts = await getCollection("posts");
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];

const sortedPosts = allPosts.sort(sort);
---

<BaseLayout>
  <section>
    <div class="py-24">
      <h1
        class="text-4xl text-balance font-medium font-display text-base-900 max-w-xl"
      >
        Stories and essays by Mag
      </h1>
      <div class="flex flex-wrap gap-3 mt-8">
        {
          tags.map((tag) => (
            <a
              class=" hover:text-blue-500 text-xs font-medium text-base-600"
              href={`/tags/${tag}`}
            >
              {tag}
            </a>
          ))
        }
      </div>
      <div class="grid grid-cols-1 mt-4 gap-8 gap-y-24 sm:grid-cols-2">
        {
          sortedPosts.map((post) => (
            <BlogEntry
              url={"/posts/" + post.slug}
              alt={post.data.title}
              tags={post.data.tags}
              title={post.data.title}
              image={post.data.image.url}
              description={post.data.description}
              pubDate={post.data.pubDate?.toString().slice(4, 15)}
            />
          ))
        }
      </div>
    </div>
  </section>
  <!-- <Cta /> -->
</BaseLayout>
